<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="130dp"
    android:layout_height="200dp"
    android:layout_marginStart="30dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/backgroundpopular"
    android:elevation="5dp">

    <TextView
        android:id="@+id/popular_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/popular_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/popular_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/popular_fee"
        app:layout_constraintEnd_toEndOf="@+id/popular_title"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="@+id/popular_title"
        app:layout_constraintTop_toBottomOf="@+id/popular_title"
        app:srcCompat="@drawable/pop_2" />

    <TextView
        android:id="@+id/popular_fee"
        android:layout_width="52dp"
        android:layout_height="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/popular_addbtn"
        app:layout_constraintEnd_toEndOf="@+id/popular_image"
        app:layout_constraintStart_toEndOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/popular_image" />

    <TextView
        android:id="@+id/popular_addbtn"
        android:layout_width="58dp"
        android:layout_height="24dp"
        android:layout_marginBottom="37dp"
        android:background="@drawable/button"
        android:gravity="center"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="+Add"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/popular_fee"
        app:layout_constraintStart_toStartOf="@+id/textView15"
        app:layout_constraintTop_toBottomOf="@+id/popular_fee"
        tools:gravity="center" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="32dp"
        android:layout_height="18dp"
        android:text="Ksh."
        android:textColor="@color/orange"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/popular_fee"
        app:layout_constraintEnd_toStartOf="@+id/popular_fee"
        app:layout_constraintStart_toStartOf="@+id/popular_image"
        app:layout_constraintTop_toTopOf="@+id/popular_fee"
        tools:layout_marginStart="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>